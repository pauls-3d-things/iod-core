{
    "name": "iod-core",
    "version": "0.0.1",
    "description": "IoD Core",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf lib dist",
        "test": "mocha lib/test/common/test-setup.js --timeout 10000 lib/**/*.spec.js",
        "tslint": "tslint --project .",
        "compile": "tsc",
        "webpack-prod": "webpack --mode=\"production\"",
        "webpack": "webpack --mode=\"development\"",
        "html": "cpr src/ui/index.html dist/ -o ",
        "css:bulma": "cpr node_modules/bulma/css/bulma.css dist/ -o ",
        "css:fa": "cpr node_modules/font-awesome/css/*font-awesome.min.css dist/css/ -o ",
        "font": "cpr node_modules/font-awesome/fonts dist/fonts/ -o ",
        "css": "npm-run-all css:*",
        "assets": "npm-run-all css font html",
        "build-for-image": "npm-run-all clean compile assets webpack-prod",
        "build": "npm-run-all clean tslint compile assets webpack test",
        "dev": "nodemon lib/server/index.js",
        "start": "node lib/server/index.js"
    },
    "author": "Paul Smith <code@uvwxy.de>",
    "license": "GPL-3.0",
    "files": [
        "lib/",
        "dist/",
        "resources/config/basic-auth.json",
        "ormconfig.json"
    ],
    "dependencies": {
        "basic-auth": "^2.0.0",
        "body-parser": "^1.18.2",
        "express": "^4.16.2",
        "pg": "^7.3.0",
        "reflect-metadata": "^0.1.10",
        "routing-controllers": "^0.7.6",
        "serve-static": "^1.13.1",
        "server-destroy": "^1.0.1",
        "typedi": "^0.8.0",
        "typeorm": "0.2.7",
        "typeorm-routing-controllers-extensions": "^0.2.0",
        "typeorm-typedi-extensions": "^0.2.1",
        "uuid": "^3.1.0",
        "xrange": "^1.0.1"
    },
    "devDependencies": {
        "@types/basic-auth": "^1.1.2",
        "@types/body-parser": "^1.16.8",
        "@types/chai": "^4.0.10",
        "@types/chai-as-promised": "^7.1.0",
        "@types/express": "^4.0.39",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.5.7",
        "@types/node-fetch": "^2.1.2",
        "@types/react": "^16.0.31",
        "@types/react-dom": "^16.0.3",
        "@types/serve-static": "^1.13.1",
        "@types/uuid": "^3.4.3",
        "bloomer": "^0.6.3",
        "bulma": "^0.7.1",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "cpr": "^3.0.1",
        "font-awesome": "^4.7.0",
        "insert-css": "^2.0.0",
        "javascript-natural-sort": "^0.7.1",
        "mocha": "^5.2.0",
        "moment": "^2.20.1",
        "node-fetch": "^2.2.0",
        "nodemon": "^1.14.3",
        "npm-run-all": "^4.1.2",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "rimraf": "^2.6.2",
        "ts-node": "7.0.0",
        "tslint": "^5.8.0",
        "tslint-config-standard": "^7.0.0",
        "typescript": "3.0.1",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.5",
        "whatwg-fetch": "^2.0.3"
    }
}
